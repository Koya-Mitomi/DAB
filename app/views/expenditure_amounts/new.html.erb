<% provide(:title, '金額の追加') %>
<h1>金額の追加</h1>
<%= form_with(model: @expenditure_amount) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>

  <%= f.hidden_field :expenditure_id, class: 'form-control', value: params[:format] %>

  <%= f.label :date, "年月" %>
  <%= f.date_select :date, class: 'form-control' %>

  <%= f.label :amount, "金額" %>
  <%= f.number_field :amount, class: 'form-control' %>円

  <%= f.submit "登録", class: "btn btn-primary" %>
<% end %>
