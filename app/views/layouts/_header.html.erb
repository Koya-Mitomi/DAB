<header>
  <div class="container">
    <%= link_to "DAB", root_path, id: "logo"%>
    <% if logged_in? %>
      ログイン中のユーザー:<%= current_user.name %>
    <% end %>
    <nav>
      <ul>
        <li><%= link_to "ホームページ", root_path %></li>
        <li><%= link_to "このアプリの使い方", help_path %></li>
        <% if logged_in? %>
          <li><%= link_to "家計簿", current_user %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">アカウント</a>
            <ul id="dropdown-menu" class="dropdown-menu">
              <li><%= link_to "ユーザー情報の編集", edit_user_path(current_user) %></li>
              <li>
                <%= link_to "ログアウト", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "ログイン", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
