<% provide(:title, "支出の合計")%>
<h1>今月の支出</h1>
<%= ExpenditureAmount.where(date: Time.zone.today.all_month).sum(:amount) %>円

<% if current_user.expenditures.order(:name).present? %>
  <% current_user.expenditures.order(:name).each do |e| %>
    <%= link_to e.name, expenditure_amount_path(e) %>
    <%= ExpenditureAmount.where(date: Time.zone.today.all_month, user_id: current_user.id, expenditure_id: e.id).sum(:amount) %>円<br>
  <% end %>
<% end %><br>
